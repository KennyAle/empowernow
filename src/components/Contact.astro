<section id="contact" class="contact">
  <div class="contact-content">
    <div class="contact-form-container">
      <h2>Contacto</h2>
      <p>
        ¿Tienes alguna pregunta o quieres más información? Envíame un mensaje.
      </p>
      <form class="contact-form">
        <div class="input-group">
          <label for="name">Nombre:</label>
          <input
            type="text"
            id="name"
            name="name"
            autocomplete="name"
            required
          />
        </div>
        <div class="input-group">
          <label for="email">Correo Electrónico:</label>
          <input
            type="email"
            id="email"
            name="email"
            autocomplete="email"
            required
          />
        </div>
        <div class="input-group">
          <label for="phone">Número Telefónico:</label>
          <input
            type="tel"
            id="phone"
            name="phone"
            autocomplete="tel"
            required
          />
        </div>
        <div class="input-group">
          <label for="message">Mensaje:</label>
          <textarea
            id="message"
            name="message"
            rows="4"
            autocomplete="off"
            required></textarea>
        </div>
        <button type="submit" class="cta">Enviar</button>
      </form>
    </div>
    <div class="contact-image-container">
      <img
        src="/images/image2.webp"
        alt="Imagen de contacto"
        class="contact-image"
      />
    </div>
  </div>
</section>
<script>
  import emailjs from "@emailjs/browser";
  const form = document.querySelector(".contact-form") as HTMLFormElement;

  form.addEventListener("submit", (e) => {
    e.preventDefault();
    const name = document.querySelector("#name") as HTMLInputElement;
    const email = document.querySelector("#email") as HTMLInputElement;
    const phone = document.querySelector("#phone") as HTMLTextAreaElement;
    const message = document.querySelector("#message") as HTMLInputElement;
    const templateParams = {
      name: name.value,
      email: email.value,
      phone: phone.value,
      message: message.value,
    };
    emailjs
      .send("contact_service", "contact_form", templateParams, {
        publicKey: "MU9tWQSAOXXyMjLl9",
      })
      .then(
        () => {
          alert("¡Mensaje enviado con éxito! Gracias por contactarme.");
          form.reset();
        },
        (err) => {
          alert(
            "Hubo un problema al enviar el mensaje. Por favor, inténtalo de nuevo."
          );
          console.log("FAILED...", err);
        }
      );
  });
</script>
